<li>
    <span class="content"><%= post.content %></span>
    <span class="timestamp">
        <%= time_ago_in_words(post.created_at) %> ago.
        <% if current_user?(feed_item.user) %>
            <%= link_to "删除", feed_item, method: 'delete', 
                         data: { confirm: "确定删除？" } %>
        <% end %>
    </span>
</li>
