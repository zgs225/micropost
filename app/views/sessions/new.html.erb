<% provide(:title, "登录") %>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <%= form_for :session, url: sessions_path, html: { role: "form" } do |f| %>
            <legend>登录</legend>
            <div class="form-group">
                <%= f.label :email, "邮箱", class: "control-label" %>
                <%= f.text_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :password, "密码", class: "control-label" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit "登录", class: "btn btn-default btn-primary btn-block" %>
            </div>
            <p><%= link_to "新用户？注册", signup_path %></p>
        <% end %>
    </div>
</div>
