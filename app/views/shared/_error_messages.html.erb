<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            包含了<%= object.errors.count %>条错误。
            <ul>
                <% object.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>
